{
  "compilerOptions": {
    "target": "ES6",                                   
    "module": "CommonJS",                            
    "rootDir": "./public",                             
    "outDir": "./dist",                             
    "moduleResolution": "node",
    "allowJs": true,                                  
    "checkJs": false,                                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true                               
  },
  "include": ["public"],
  "exclude": ["node_modules", "dist"]
}